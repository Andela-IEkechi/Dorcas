= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :shirt
    = f.text_field :shirt
  .field
    = f.label :users
    = f.text_field :users
  .field
    = f.label :payment_method
    = f.text_field :payment_method
  .actions
    = f.submit 'Save'
