= form_for @shirt do |f|
  - if @shirt.errors.any?
    #error_explanation
      %h2= "#{pluralize(@shirt.errors.count, "error")} prohibited this shirt from being saved:"
      %ul
        - @shirt.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :category
    = f.select :category, options_for_select(Shirt::CATEGORIES), { include_blank: true}
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :brand
    = f.text_field :brand
  .field
    = f.label :sex
    = f.select :sex, options_for_select(Shirt::SEX), { include_blank: true}
  .field
    = f.label :size_fit
    = f.select :size_fit, options_for_select(Shirt::FITS), { include_blank: true}
  .field
    = f.label :pricing
    = f.number_field :pricing
  .actions
    = f.submit 'Save'
