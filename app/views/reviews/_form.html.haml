= form_for @review do |f|
  - if @review.errors.any?
    #error_explanation
      %h2= "#{pluralize(@review.errors.count, "error")} prohibited this review from being saved:"
      %ul
        - @review.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :shirt
    = f.text_field :shirt
  .field
    = f.label :users
    = f.text_field :users
  .field
    = f.label :comment
    = f.text_area :comment
  .actions
    = f.submit 'Save'
